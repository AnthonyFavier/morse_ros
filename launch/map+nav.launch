<launch>
    <master auto="start"/>

    <!-- setting up robot frames and model -->
    <!-- <param name="robot_description" command="cat $(find navigation_morse)/data/pr2.urdf"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/> -->

    <!-- run slam or the map server and amcl -->
    <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping" output="screen">
        <remap from="scan" to="james/sick"/>
        <param name="odom_frame" value="odom"/>
    </node>
    <!--node name="map_server" pkg="map_server" type="map_server" args="$(find morse_ros_navigation)/map.yaml"/>
    <node name="amcl" pkg="amcl" type="amcl">
        <remap from="scan" to="james/sick"/>
    </node-->

    <!-- run move base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
        <!--remap from="base_scan" to="james/sick"/-->
        <remap from="odom" to="odom"/>
        <!--param name="controller_frequency" value="10.0" />
        <param name="footprint_padding" value="0.01" />
        <param name="controller_patience" value="3.0" />
        <param name="controller_frequency" value="10.0" />
        <param name="planner_frequency" value="2.0" /-->

        <rosparam file="$(find morse_move_base)/launch/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find morse_move_base)/launch/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find morse_move_base)/launch/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find morse_move_base)/launch/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find morse_move_base)/launch/base_local_planner_params.yaml" command="load" /> 
	<!--param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/-->
        <rosparam file="$(find morse_move_base)/launch/dwa_planner_ros.yaml" command="load" />
    </node>
</launch>
